<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_name"
        android:textColor="?android:textColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="16sp"
        android:onClick="easterEgg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/created_by"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/outlined_box"
        android:padding="16dp"
        android:text="@string/description"
        android:textAlignment="textStart"
        android:textColor="?android:textColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/last_updated"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Start of custom resistor image -->

    <ImageView
        android:id="@+id/r_left"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_left"
        app:layout_constraintEnd_toStartOf="@+id/r_band_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/r_band_1"
        android:layout_width="11.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_1"
        app:layout_constraintEnd_toStartOf="@+id/r_post_band_1"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_post_band_1"
        android:layout_width="10dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_post_band_1"
        app:layout_constraintEnd_toStartOf="@+id/r_band_2"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_band_2"
        android:layout_width="11dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_2"
        app:layout_constraintEnd_toStartOf="@+id/r_post_band_2"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>


    <ImageView
        android:id="@+id/r_post_band_2"
        android:layout_width="9.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_post_band_2"
        app:layout_constraintEnd_toStartOf="@+id/r_band_3"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_band_3"
        android:layout_width="11.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_3"
        app:layout_constraintEnd_toStartOf="@+id/r_post_band_3"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_post_band_3"
        android:layout_width="10.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_post_band_3"
        app:layout_constraintEnd_toStartOf="@+id/r_band_4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_band_4"
        android:layout_width="11.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_4"
        app:layout_constraintEnd_toStartOf="@+id/r_post_band_4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_post_band_4"
        android:layout_width="16.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_post_band_4"
        app:layout_constraintEnd_toStartOf="@+id/r_band_5"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_band_5"
        android:layout_width="11.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_5"
        app:layout_constraintEnd_toStartOf="@+id/r_post_band_5"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_post_band_5"
        android:layout_width="11dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_post_band_5"
        app:layout_constraintEnd_toStartOf="@+id/r_band_6"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_band_6"
        android:layout_width="11.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/resistor_band_6"
        app:layout_constraintEnd_toStartOf="@+id/r_right"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/r_right"
        android:layout_width="52.5dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:src="@drawable/resistor_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="ContentDescription"/>


</androidx.constraintlayout.widget.ConstraintLayout>