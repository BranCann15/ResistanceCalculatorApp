<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dropdown layout components -->
    <style name="textInputLayoutColorTextDesign" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColorHint">?hintTextColor</item>
        <item name="hintTextColor">@color/selected_dropdown_color</item>
        <item name="boxStrokeColor">@color/selected_dropdown_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AutoCompleteTextViewColorTextDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawableStart">@drawable/square_blank</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Designs -->
    <style name="headerTextDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="descriptionTextDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button Design -->
    <style name="rcvButtonDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/outlined_box</item>
        <item name="android:minWidth">320dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_theme</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text box design for displaying resistance -->
    <style name="resistanceDisplayTextDesign">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/outlined_box</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
    </style>

    <!-- Divider -->
    <style name="divideDesign">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">?android:textColor</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>