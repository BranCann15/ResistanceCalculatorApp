<resources>
    <!-- Base application theme. (Light Mode) -->
    <style name="Theme.ResistanceCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_200</item>
        <item name="colorPrimaryVariant">@color/brown_500</item>
        <item name="colorOnPrimary">@color/neutral</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/neutral</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>