<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light Mode) -->
    <style name="Theme.ResistanceCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/mango_primary</item>
        <item name="colorOnPrimary">@color/beige</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/beige</item>
        <!-- Dropdown colors -->
        <item name="android:textColor">@color/black_theme</item>
        <item name="hintTextColor">@color/black_theme</item>
        <item name="android:textColorPrimary">@color/black_theme</item>
    </style>

    <!-- Default colors for dropdowns -->
    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/black_theme</color>
    <color name="selected_dropdown_color">@color/orange_primary</color>
    <color name="text_outline_color">@color/orange_primary</color>

    <!-- Dropdown layout components -->
    <style name="textInputLayoutColorTextDesign" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColorHint">?hintTextColor</item>
        <item name="hintTextColor">@color/selected_dropdown_color</item>
        <item name="boxStrokeColor">@color/selected_dropdown_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AutoCompleteTextViewColorTextDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawableStart">@drawable/square_blank</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text box design for displaying resistance -->
    <style name="resistanceDisplayTextDesign">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/outlined_box</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
    </style>

    <style name="rcvButtonDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/outlined_box</item>
        <item name="android:minWidth">320dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_theme</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text components -->
    <style name="aboutPageTextDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Divider -->
    <style name="divideDesign">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">?android:textColor</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>