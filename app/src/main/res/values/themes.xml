<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light Mode) -->
    <style name="Theme.ResistanceCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryVariant">@color/mango_primary</item>
        <item name="colorOnPrimary">@color/neutral</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/neutral</item>

        <!-- Menu item text color -->
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>

        <!-- Dropdown colors -->
        <item name="android:textColor">@color/neutral_night</item>
        <item name="hintTextColor">@color/neutral_night</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/neutral_night</color>
    <color name="selected_dropdown_color">@color/orange_primary</color>
    <color name="text_outline_color">@color/orange_primary</color>

    <!-- Menu item text color -->
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Dropdown layout components -->
    <style name="textInputLayoutColorTextDesign" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColorHint">?hintTextColor</item>
        <item name="hintTextColor">?android:textColorPrimary</item>
        <item name="boxStrokeColor">@color/selected_dropdown_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AutoCompleteTextViewColorTextDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawableStart">@drawable/blank32</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

</resources>